{% extends 'base.html.twig' %}

{% block title %}Hello CarManagementController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table { text-align: center;}
</style>
    <div class="d-grid gap-2 col-6 mx-auto mb-2" style="width:50%">
        <h3 style="text-align:center">Car Management</h3>
        {% if error|default %}
            <p>An error has occurred: </p>
            <p style="color:red;">{{ error }}</p>
        {% endif %}
    <a class="btn btn-outline-dark" href="/create/car/">Create Car</a>
    </div>
    <div id="cardiv" class="container-md">
    <table class="table table-responsive align-middle table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th scope="col">Plate</th>
            <th scope="col">Plug Type</th>
            <th scope="col">Battery Capacity</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
    {% for row in cars %}
        <tr >
            <td>{{ row.plate }}</td>
            <td>{{ row.plug_type }}</td>
            <td>{{ row.capacity }}</td>
            <td><a class="btn btn-dark" href="/edit/car/{{ row.plate  }}">Edit</a> <a class="btn btn-dark" href="/delete/car/{{ row.plate  }}">Delete</a></td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
