{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    #infocap {
        display: none; }
    #questionspan:hover {
        cursor: pointer;
    }
    #questionspan:hover #infocap{
        display: block;
    }
</style>

<div class="example-wrapper">
    <h1>Create a car</h1>
    <div>
    {{ form_start(form) }}
    <div class="input-group mb-2">
        <div class="col-3">
            <label for="plate">Plate</label>
            {{ form_widget(form.plate, {'attr': {'id':'plate','class':'form-control','placeholder': 'AR 00 TES'}}) }}
        </div>
    </div>
    <div class="input-group mb-2">
        <div class="col-3">
            <label for="plug_type">Plug Type</label>
            {{ form_widget(form.plug_type, {'attr': {'id':'plug_type','class':'form-control','placeholder': 'Plug Type'}}) }}
        </div>
    </div>
        <div class="col-3">
            <label for="capacity">Capacity</label>
        </div>
        <div class="col-3">
            <div class="input-group mb-2">
            <span title="This is an optional field, we'll estimate the charging time based on battery capacity." class="input-group-text ml-3" id="questionspan"><i class="bi bi-question-lg"></i>
            </span>
                {{ form_widget(form.capacity, {'attr': {'id':'capacity','class':'form-control','placeholder': 'Capacity'}}) }}
            </div>
        </div>

{#    {{ form_errors(form.plate) }}#}

    {% if app.request.attributes.get('_route')=='app_create_car' %}
    <button type="submit" class="btn">Create</button>
    {% else %}
    <button type="submit" class="btn">Edit</button>
    {% endif %}
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
