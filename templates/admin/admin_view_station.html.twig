{% extends 'base.html.twig' %}

{% block title %}View Station{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table,th,td { border:1px solid black; text-align: center; }
</style>

<div class="example-wrapper">
    <p>Station information:</p>
    <p>Station name:{{ station.name }}</p>
    <p>Station location:<a href="https://www.google.com/maps/search/{{ station.location|replace({'+': "%2B"}) }}">{{ station.location }}</a></p>
    <table style="width:100%">
        <tr>
            <th>Plug Id</th>
            <th>Output</th>
            <th>Tip</th>
        </tr>
        {% for row2 in plug %}
            <tr>
                <td>{{ row2.id }}</td>
                <td>{{ row2.type }}</td>
                <td>{{ row2.max_output }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
