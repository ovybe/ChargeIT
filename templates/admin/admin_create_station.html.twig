{% extends 'base.html.twig' %}

{% block title %}Create Station{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    /*form { min-width: 50%; }*/
</style>
<div class="h-100">
    {{ form_start(form) }}
    {% if errors|default %}
        <p class="text-center">An error has occurred: </p>
        <p class="text-center"  style="color:red;">{{ errors }}</p>
    {% endif %}
    <div class="row row-cols-auto w-100 text-center align-items-center center justify-content-center">
    <div class="col-md-auto">
        <label for="booking_name">Name</label>
        <div class="input-group mb-2">
            {{ form_widget(form.name, {'attr': {'id':'name','maxlength':'50'}}) }}
        </div>
    </div>
    </div>
    <div class="row row-cols-auto w-100 text-center align-items-center justify-content-center">
    <div class="col-md-auto">
        <label for="booking_name">Location</label>
        <div class="input-group mb-2">
            {{ form_widget(form.location, {'attr': {'id':'location','maxlength':'50'}}) }}
        </div>
    </div>
    </div>
    <div class="row row-cols-auto w-100 text-center align-items-center justify-content-center">
    <div class="col-md-auto">
        <label for="booking_name">Latitude</label>
        <div class="input-group mb-2">
            {{ form_widget(form.latitude, {'attr': {'id':'latitude','maxlength':'18'}}) }}
        </div>
    </div>
    </div>
    <div class="row row-cols-auto w-100 text-center align-items-center justify-content-center">
    <div class="col-md-auto">
        <label for="booking_name">Longitude</label>
        <div class="input-group mb-2">
            {{ form_widget(form.longitude, {'attr': {'id':'longitude','maxlength':'18'}}) }}
        </div>
    </div>
    </div>
    <div class="row row-cols-auto w-100 align-items-center justify-content-center">
        <div class="col-md-auto">
            <button type="submit" class="btn">Create</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
